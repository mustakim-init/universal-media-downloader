{
  "manifest_version": 3,
  "name": "Universal Media Downloader",
  "version": "2.0",
  "description": "Detects and sends media stream URLs to the Universal Media Tool desktop application.",
  "permissions": [
    "activeTab",
    "webRequest",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}